<div class="container">
  <h1>Welcome to Sinatra!</h1>
  <p>Hello, world!</p>

   <button id="return"><a href="/">Return</a></button>
  <button id="edit"><a href="/post/<%= @post.id %>/edit">Edit</a></button>
  <form id="delete" action="/post/<%= @post.id %>/delete" method="post">
